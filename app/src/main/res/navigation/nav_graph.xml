<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menu_home">
    <fragment
        android:id="@+id/menu_home"
        android:name="com.project.guideapp.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_menu_home_to_exhibitDetailFragment"
            app:destination="@id/exhibitDetailFragment" />
        <action
            android:id="@+id/action_menu_home_to_menu_street_art"
            app:destination="@id/menu_street_art" />
        <action
            android:id="@+id/action_menu_home_to_shoppingFragment"
            app:destination="@id/shoppingFragment" />
        <action
            android:id="@+id/action_menu_home_to_restaurantsFragment"
            app:destination="@id/restaurantsFragment" />
    </fragment>
    <fragment
        android:id="@+id/menu_street_art"
        android:name="com.project.guideapp.ui.streetart.StreetArtFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/menu_scan_qr"
        android:name="com.project.guideapp.ui.scanqr.ScanQRFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_menu_scan_qr_to_exhibitDetailFragment"
            app:destination="@id/exhibitDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/exhibitDetailFragment"
        android:name="com.project.guideapp.ui.exhibitdetail.ExhibitDetailFragment"
        android:label="ExhibitDetailFragment" />
    <fragment
        android:id="@+id/restaurantsFragment"
        android:name="com.project.guideapp.ui.restaurants.RestaurantsFragment"
        android:label="RestaurantsFragment" />
    <fragment
        android:id="@+id/shoppingFragment"
        android:name="com.project.guideapp.ui.shopping.ShoppingFragment"
        android:label="ShoppingFragment" />
</navigation>